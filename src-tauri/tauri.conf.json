{
  "productName": "Lightning Timer",
  "version": "0.2.0",
  "identifier": "com.pemomomo.lightning-timer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Lightning Timer",
        "width": 800,
        "height": 200,
        "minWidth": 200,
        "minHeight": 100,
        "resizable": true,
        "alwaysOnTop": false,
        "decorations": false,
        "transparent": false,
        "visible": true,
        "center": false,
        "devtools": true
      }
    ],
    "security": {
      "capabilities": ["main-capability", "timeup-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "localhost",
      "signingIdentity": "Developer ID Application: SHINYA SAITA (RNGXZZHG98)",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist"
    }
  }
}