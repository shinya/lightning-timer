{
  "productName": "Lightning Timer",
  "version": "0.1.0",
  "identifier": "com.lightning-timer.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Lightning Timer",
        "width": 800,
        "height": 200,
        "minWidth": 800,
        "minHeight": 200,
        "maxWidth": 800,
        "maxHeight": 200,
        "resizable": false,
        "alwaysOnTop": false,
        "decorations": false,
        "transparent": false,
        "visible": true,
        "center": false,
        "devtools": true
      }
    ],
    "security": {
      "capabilities": ["main-capability"]
    }
  },
  "plugins": {
    "window-state": null,
    "store": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}